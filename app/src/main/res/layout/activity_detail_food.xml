<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailFoodActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/back" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_food"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="300px"
                android:layout_height="300px"
                android:elevation="2dp"
                android:src="@drawable/sunda" />

            <TextView
                android:id="@+id/name_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soto Betawi"
                android:gravity="center"
                android:background="@color/primaryColor"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/price_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp.20.000"
                android:gravity="center"
                android:background="@color/primaryColor"
                android:textColor="@color/secondaryColor"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="5dp"
                />

            <Button
                android:id="@+id/btnAddCart"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:hint="Add to Cart"
                android:layout_marginTop="5dp"
                android:width="120dp"
                android:layout_centerHorizontal="true"
                android:textColorHint="@color/secondaryColor"
                android:textSize="13dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_shape"/>

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/profile"
            />

        <TextView
            android:id="@+id/descContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="sans-serif"
            android:layout_marginRight="35dp"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/profile"
            />

        <TextView
            android:id="@+id/ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/ingContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:fontFamily="sans-serif"
            android:layout_marginRight="35dp"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How To Cook"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/stepsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="sans-serif"
            android:layout_marginRight="35dp"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/profile"
            />

    </LinearLayout>
</ScrollView>

